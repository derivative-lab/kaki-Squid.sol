{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "~/*": ["./*"],
      "*": ["node_modules/*"]
    },
    "target": "ESNext",
    "module": "commonjs",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["hardhat.config.ts", "./scripts", "./deploy", "./test", "./typechain", "./utils"]
}
